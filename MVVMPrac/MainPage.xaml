<Page
    x:Class="MVVMPrac.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MVVMPrac"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="1487.158" Height="731.063">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,0,606.2,281.2">
        <TextBlock Margin="10,23,0,0" TextWrapping="Wrap" Text="MVVM Example App" VerticalAlignment="Top" Width="223" FontSize="24" HorizontalAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,90,0,0" TextWrapping="Wrap" Text="Type something here and tab or click out to update binding:" VerticalAlignment="Top"/>
        <TextBox Text="{x:Bind Data.Name, Mode=TwoWay}" HorizontalAlignment="Left" Margin="50,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="398"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,182,0,0" TextWrapping="Wrap" Text="Bound string will appear here:" VerticalAlignment="Top"/>
        <TextBlock Text="{x:Bind Data.Name, Mode=OneWay}" HorizontalAlignment="Left" Margin="50,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Page>
